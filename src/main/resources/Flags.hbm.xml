<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="model.Flag" table="flag_logs">

		<meta attribute="class-description">
			Information about each flag
		</meta>

		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>

		<property name="createdAt" column="created_at"
			type="timestamp" />
		<property name="auto" column="is_auto" type="boolean" />

		<many-to-one name="post" class="model.Post"
			column="post_id" unique="true" not-null="true" cascade="all" />

	</class>
</hibernate-mapping>